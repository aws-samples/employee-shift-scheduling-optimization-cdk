    "constructs": "^10.1.163"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^18.11.9",
    "eslint": "^7.3.1",
    "jest": "^27.4.3",
    "prettier": "^2.5.0",
    "ts-jest": "^27.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
